.header__icons {
    display: flex;
    align-items: center;
    gap: 1rem;
}

.header__icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2rem;
    height: 2rem;
    color: rgb(var(--color-foreground));
    transition: color var(--duration-short) ease;
}

.header__icon:hover {
    color: rgba(var(--color-foreground), 0.8);
}

