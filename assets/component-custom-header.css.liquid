/* ===== FOCUS STATES FOR ACCESSIBILITY ===== */
.header__menu-item:focus,
.header__menu-item--dropdown:focus,
.header__mobile-menu-toggle:focus,
.header__mobile-menu-close:focus {
    outline: 2px solid rgb(var(--color-accent));
    outline-offset: 2px;
}

/* Enhanced focus states for dropdown items */
.header__dropdown-item:focus {
    background-color: rgba(var(--color-foreground), 0.1);
    outline: 2px solid rgb(var(--color-accent));
    outline-offset: -2px;
}

/* ===== SMOOTH TRANSITIONS ===== */
.header__layout,
.header__menu-item,
.header__dropdown-menu,
.header__mobile-menu {
    transition: all var(--duration-short) ease;
}

