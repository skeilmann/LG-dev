{% if customer == null %}
  <div class="local-favorites-section page-width">
    <h2 class="local-favorites__heading">{{ 'customer.favorites.title' | t }}</h2>
    <div class="local-favorites__grid grid grid--2-col product-grid">
      <div class="local-favorites__empty-state hidden">
        <p>{{ 'customer.favorites.empty' | t }}</p>
      </div>
      <div class="local-favorites__products">
        <!-- Products will be dynamically inserted here by JavaScript -->
      </div>
    </div>
  </div>
{% endif %}

{% schema %}
{
  "name": "Local Favorites",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "Local Favorites Section"
    }
  ],
  "presets": [
    {
      "name": "Local Favorites"
    }
  ]
}
{% endschema %}
