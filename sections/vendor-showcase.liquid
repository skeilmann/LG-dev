{%- comment -%}
  Filename: vendor-showcase.liquid
  Purpose: Display vendor logos in grid with links to vendor-filtered pages
  Dependencies: None
  Created: 2025-01-15
{%- endcomment -%}

{{ 'component-vendor-showcase.css' | asset_url | stylesheet_tag }}

{%- liquid
  assign section_id = section.id
  assign heading = section.settings.heading
  assign heading_size = section.settings.heading_size
  assign max_vendors = section.settings.max_vendors | default: 15
  assign desktop_columns = section.settings.desktop_columns | default: 5
  assign mobile_columns = section.settings.mobile_columns | default: 2
  assign logo_height = section.settings.logo_height | default: 60
  assign show_vendor_names = section.settings.show_vendor_names
  assign color_scheme = section.settings.color_scheme | default: 'scheme-1'
-%}

<div class="vendor-showcase color-{{ color_scheme }} gradient section-{{ section_id }}-padding">
  <div class="page-width">
    {%- if heading != blank -%}
      <div class="vendor-showcase__header">
        <h2 class="vendor-showcase__title {{ heading_size }}">{{ heading }}</h2>
      </div>
    {%- endif -%}

    {%- if section.blocks.size > 0 -%}
      <div
        class="vendor-showcase__grid"
        style="
          --desktop-columns: {{ desktop_columns }};
          --mobile-columns: {{ mobile_columns }};
          --logo-height: {{ logo_height }}px;
        "
      >
        {%- for block in section.blocks limit: max_vendors -%}
          {%- if block.type == 'vendor' and block.settings.vendor_name != blank -%}
            {%- liquid
              assign vendor_name = block.settings.vendor_name
              assign vendor_handle = vendor_name | handle
              assign vendor_collection = collections[vendor_handle]
              assign vendor_url = '/collections/all?filter.v.vendor=' | append: vendor_name | url_encode
            -%}

            <div class="vendor-showcase__item" {{ block.shopify_attributes }}>
              <a
                href="{{ vendor_url }}"
                class="vendor-showcase__link"
                aria-label="{{ 'vendor_showcase.view_all_products' | t: vendor: vendor_name }}"
              >
                {%- if vendor_collection.featured_image != blank -%}
                  <div class="vendor-showcase__logo-container">
                    {{
                      vendor_collection.featured_image
                      | image_url: width: 200
                      | image_tag:
                        loading: 'lazy',
                        alt: vendor_name,
                        class: 'vendor-showcase__logo',
                        width: vendor_collection.featured_image.width,
                        height: vendor_collection.featured_image.height
                    }}
                  </div>
                {%- else -%}
                  <div class="vendor-showcase__logo-container vendor-showcase__logo-container--placeholder">
                    <div class="vendor-showcase__placeholder">
                      {{ vendor_name | truncate: 15 }}
                    </div>
                  </div>
                {%- endif -%}

                {%- if show_vendor_names -%}
                  <div class="vendor-showcase__name">
                    {{ vendor_name }}
                  </div>
                {%- endif -%}
              </a>
            </div>
          {%- endif -%}
        {%- endfor -%}
      </div>
    {%- else -%}
      <div class="vendor-showcase__empty">
        <p>{{ 'vendor_showcase.no_vendors_configured' | t }}</p>
      </div>
    {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": "t:sections.vendor_showcase.name",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "inline_richtext",
      "id": "heading",
      "label": "t:sections.vendor_showcase.settings.heading.label",
      "default": "t:sections.vendor_showcase.settings.heading.default"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "t:sections.all.heading_size.options__1.label"
        },
        {
          "value": "h1",
          "label": "t:sections.all.heading_size.options__2.label"
        },
        {
          "value": "h0",
          "label": "t:sections.all.heading_size.options__3.label"
        }
      ],
      "default": "h1",
      "label": "t:sections.all.heading_size.label"
    },
    {
      "type": "range",
      "id": "max_vendors",
      "min": 1,
      "max": 50,
      "step": 1,
      "default": 15,
      "label": "t:sections.vendor_showcase.settings.max_vendors.label",
      "info": "t:sections.vendor_showcase.settings.max_vendors.info"
    },
    {
      "type": "range",
      "id": "desktop_columns",
      "min": 3,
      "max": 6,
      "step": 1,
      "default": 5,
      "label": "t:sections.vendor_showcase.settings.desktop_columns.label"
    },
    {
      "type": "range",
      "id": "mobile_columns",
      "min": 2,
      "max": 3,
      "step": 1,
      "default": 2,
      "label": "t:sections.vendor_showcase.settings.mobile_columns.label"
    },
    {
      "type": "range",
      "id": "logo_height",
      "min": 40,
      "max": 120,
      "step": 10,
      "unit": "px",
      "default": 60,
      "label": "t:sections.vendor_showcase.settings.logo_height.label"
    },
    {
      "type": "checkbox",
      "id": "show_vendor_names",
      "default": false,
      "label": "t:sections.vendor_showcase.settings.show_vendor_names.label",
      "info": "t:sections.vendor_showcase.settings.show_vendor_names.info"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "vendor",
      "name": "t:sections.vendor_showcase.blocks.vendor.name",
      "settings": [
        {
          "type": "text",
          "id": "vendor_name",
          "label": "t:sections.vendor_showcase.blocks.vendor.settings.vendor_name.label",
          "info": "t:sections.vendor_showcase.blocks.vendor.settings.vendor_name.info"
        },
        {
          "type": "checkbox",
          "id": "enabled",
          "default": true,
          "label": "t:sections.vendor_showcase.blocks.vendor.settings.enabled.label"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.vendor_showcase.presets.name",
      "blocks": [
        {
          "type": "vendor",
          "settings": {
            "vendor_name": "Brand 1"
          }
        },
        {
          "type": "vendor",
          "settings": {
            "vendor_name": "Brand 2"
          }
        },
        {
          "type": "vendor",
          "settings": {
            "vendor_name": "Brand 3"
          }
        },
        {
          "type": "vendor",
          "settings": {
            "vendor_name": "Brand 4"
          }
        },
        {
          "type": "vendor",
          "settings": {
            "vendor_name": "Brand 5"
          }
        }
      ]
    }
  ]
}
{% endschema %}
