{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  #shopify-section-{{ section.id }} .collage-wrapper-title {
    color: {{ section.settings.heading_color }} !important;
    font-size: {{ section.settings.heading_font_size }}px !important;
  }

  #shopify-section-{{ section.id }} .collage-wrapper-subtitle {
    color: {{ section.settings.subheading_color }} !important;
    font-size: {{ section.settings.subheading_font_size }}px !important;
  }

  .section-{{ section.id }} .collage {
    display: grid;
    grid-template-columns: 50% 50%;
    gap: {{ settings.spacing_grid_horizontal }}px;
  }

  .section-{{ section.id }} .collage__item--image.collage__item--left:first-child,
  .section-{{ section.id }} .collage__item--image.collage__item--right:last-child {
    height: 100%;
    grid-row: span 2;
  }

  .section-{{ section.id }} .collage__item--image.collage__item--left:first-child .media,
  .section-{{ section.id }} .collage__item--image.collage__item--right:last-child .media {
    height: 100%;
    object-fit: cover;
  }

  #shopify-section-{{ section.id }} .collection-image {
    height: 100%;
  }

  #shopify-section-{{ section.id }} .collection-image img {
    height: 100%;
    width: 100%;
    object-fit: cover;
  }

  #shopify-section-{{ section.id }} .products-container {
    display: flex;
    /* grid-template-rows: 1fr 1fr; */
    gap: {{ settings.spacing_grid_horizontal }}px;
  }

  #shopify-section-{{ section.id }} .collection-product {
    height: 100%;
  }

  #shopify-section-{{ section.id }} .collection-product .card {
    height: 100%;
    margin: 0;
  }

  #shopify-section-{{ section.id }} .collage__button {
    margin-top: 2rem;
    text-align: center;
  }

  #shopify-section-{{ section.id }} .button {
    min-width: 15rem;
  }

  @media screen and (max-width: 749px) {
    .section-{{ section.id }} .collage {
      grid-template-columns: 1fr;
    }

    #shopify-section-{{ section.id }} .products-container {
      grid-template-rows: auto;
      grid-template-columns: 1fr 1fr;
    }
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} gradient isolate section-{{ section.id }}">
  <div class="page-width section-{{ section.id }}-padding">
    {%- if section.settings.heading != blank -%}
      <h2 class="collage-wrapper-title {{ section.settings.heading_size }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
        {{ section.settings.heading }}
      </h2>
    {%- endif -%}
    {%- if section.settings.subheading != blank -%}
      <h3 class="collage-wrapper-subtitle{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
        {{ section.settings.subheading }}
      </h3>
    {%- endif -%}
    {%- if section.settings.text_content != blank -%}
      <div class="collage-text-content rte{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
        {{ section.settings.text_content }}
      </div>
    {%- endif -%}
    <div class="collage{% if section.settings.mobile_layout == 'collage' %} collage--mobile{% endif %}">
      {%- if section.settings.collection != blank -%}
        <div class="collection-image">
          {%- if section.settings.collection.image != blank -%}
            {{
              section.settings.collection.image
              | image_url: width: 1500
              | image_tag: loading: 'lazy', sizes: '(min-width: 750px) 50vw, 100vw'
            }}
          {%- else -%}
            {{ 'collection-1' | placeholder_svg_tag: 'placeholder-svg' }}
          {%- endif -%}
        </div>

        <div class="products-container">
          {%- paginate section.settings.collection.products by section.settings.products_per_page -%}
            {%- for product in section.settings.collection.products limit: section.settings.products_per_page -%}
              <div class="collection-product">
                {% render 'card-product',
                  card_product: product,
                  media_aspect_ratio: 'adapt',
                  show_secondary_image: true,
                  extend_height: true
                %}
              </div>
            {%- endfor -%}

            {%- if paginate.pages > 1 and section.settings.enable_pagination -%}
              <div class="pagination-wrapper">
                {%- if section.settings.pagination_style == 'numbers' -%}
                  {% render 'pagination', paginate: paginate %}
                {%- else -%}
                  <div class="button-pagination">
                    {%- if paginate.previous -%}
                      <a href="{{ paginate.previous.url }}" class="button button--secondary">
                        {{ 'general.pagination.previous' | t }}
                      </a>
                    {%- endif -%}
                    {%- if paginate.next -%}
                      <a href="{{ paginate.next.url }}" class="button button--secondary">
                        {{ 'general.pagination.next' | t }}
                      </a>
                    {%- endif -%}
                  </div>
                {%- endif -%}
              </div>
            {%- endif -%}
          {%- endpaginate -%}
        </div>

        {%- if section.settings.show_view_all and section.settings.collection != blank -%}
          <div class="collage__button">
            <a
              href="{{ section.settings.collection.url }}"
              class="button{% if section.settings.button_style_secondary %} button--secondary{% else %} button--primary{% endif %}"
            >
              {{ section.settings.button_label | default: 'View all' }}
            </a>
          </div>
        {%- endif -%}
      {%- endif -%}
    </div>
  </div>
</div>

