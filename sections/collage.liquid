          "label": "Bulk"
        }
      ]
    },
    {
      "type": "checkbox",
      "id": "show_vendor",
      "default": false,
      "label": "Show vendor"
    },
    {
      "type": "checkbox",
      "id": "show_rating",
      "default": false,
      "label": "Show product rating"
    },
    {
      "type": "header",
      "content": "t:sections.collage.settings.header_mobile.content"
    },
    {
      "type": "checkbox",
      "id": "enable_mobile_slider",
      "default": true,
