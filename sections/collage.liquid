<script>
  window.addEventListener('DOMContentLoaded', (event) => {
    const slider = document.querySelector('#shopify-section-{{ section.id }} .slider');
    const sliderPrev = document.querySelector('#shopify-section-{{ section.id }} .slider-button--prev');
    const sliderNext = document.querySelector('#shopify-section-{{ section.id }} .slider-button--next');
    const products = document.querySelectorAll('#shopify-section-{{ section.id }} .collection-product');
    const counterCurrent = document.querySelector('#shopify-section-{{ section.id }} .slider-counter--current');

    let currentIndex = 0;
    const productsPerPage = 2;
    const totalProducts = products.length;

    function showProducts(index) {
      products.forEach((product, i) => {
        product.classList.remove('active');
        if (i >= index && i < index + productsPerPage) {
          product.classList.add('active');
        }
      });
      counterCurrent.textContent = Math.floor(index / productsPerPage) + 1;
    }

    if (sliderPrev && sliderNext) {
      sliderPrev.addEventListener('click', () => {
        if (currentIndex > 0) {
          currentIndex = Math.max(0, currentIndex - productsPerPage);
          showProducts(currentIndex);
        }
      });

      sliderNext.addEventListener('click', () => {
        if (currentIndex + productsPerPage < totalProducts) {
          currentIndex = Math.min(totalProducts - productsPerPage, currentIndex + productsPerPage);
          showProducts(currentIndex);
        }
      });
    }
  });
</script>
