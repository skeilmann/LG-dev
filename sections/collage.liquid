{%- unless section.settings.quick_add == 'none' -%}
  {{ 'quick-add.css' | asset_url | stylesheet_tag }}
  <script src="{{ 'product-form.js' | asset_url }}" defer="defer"></script>
{%- endunless -%}

{%- if section.settings.quick_add == 'standard' -%}
  <script src="{{ 'quick-add.js' | asset_url }}" defer="defer"></script>
{%- endif -%}

{%- if section.settings.quick_add == 'bulk' -%}
  <script src="{{ 'quick-add-bulk.js' | asset_url }}" defer="defer"></script>
  <script src="{{ 'quantity-popover.js' | asset_url }}" defer="defer"></script>
  <script src="{{ 'price-per-item.js' | asset_url }}" defer="defer"></script>
  <script src="{{ 'quick-order-list.js' | asset_url }}" defer="defer"></script>
{%- endif -%}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  #shopify-section-{{ section.id }} .collage-wrapper-title {
    color: {{ section.settings.heading_color }} !important;
    font-size: {{ section.settings.heading_font_size }}px !important;
  }

  #shopify-section-{{ section.id }} .collage-wrapper-subtitle {
    color: {{ section.settings.subheading_color }} !important;
    font-size: {{ section.settings.subheading_font_size }}px !important;
  }

  .section-{{ section.id }} .collage {
    display: grid;
    grid-template-columns: 50% 50%;
    gap: {{ settings.spacing_grid_horizontal }}px;
  }

  .section-{{ section.id }} .collage__item--image.collage__item--left:first-child,
  .section-{{ section.id }} .collage__item--image.collage__item--right:last-child {
    height: 100%;
    grid-row: span 2;
  }

  .section-{{ section.id }} .collage__item--image.collage__item--left:first-child .media,
  .section-{{ section.id }} .collage__item--image.collage__item--right:last-child .media {
    height: 100%;
    object-fit: cover;
  }

  #shopify-section-{{ section.id }} .collection-image {
    align-self: start;
    position: sticky;
    top: 20px;
    height: auto;
    max-height: 100vh;
  }

  #shopify-section-{{ section.id }} .collection-image img {
    height: 100%;
    width: 100%;
    object-fit: cover;
  }

  #shopify-section-{{ section.id }} .products-container {
    position: relative;
    display: flex;
    flex-direction: column;
  }

  #shopify-section-{{ section.id }} .products-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: {{ settings.spacing_grid_horizontal }}px;
    width: 100%;
    overflow: hidden;
  }

  #shopify-section-{{ section.id }} .collection-product {
    opacity: 0;
    transform: translateX(20px);
    transition: opacity 0.3s ease, transform 0.3s ease;
  }

  #shopify-section-{{ section.id }} .collection-product.active {
    opacity: 1;
    transform: translateX(0);
  }

  #shopify-section-{{ section.id }} .quick-add {
    width: 100%;
    margin-top: 10px;
  }

  #shopify-section-{{ section.id }} .slider {
    scrollbar-width: none;
  }

  #shopify-section-{{ section.id }} .slider::-webkit-scrollbar {
    display: none;
  }

  #shopify-section-{{ section.id }} .slider-buttons {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: 20px;
  }

  #shopify-section-{{ section.id }} .view-all-button {
    margin-top: 10px;
    text-align: center;
  }

  #shopify-section-{{ section.id }} .card__content {
    display: flex;
    flex-direction: column;
  }

  #shopify-section-{{ section.id }} .quick-add {
    width: 100%;
    margin-top: 10px;
  }

  #shopify-section-{{ section.id }} .quick-add__submit {
    width: 100%;
    padding: 10px;
  }

  @media screen and (max-width: 749px) {
    .section-{{ section.id }} .collage {
      grid-template-columns: 1fr;
    }

    #shopify-section-{{ section.id }} .collection-image {
      position: relative;
      top: 0;
    }

    #shopify-section-{{ section.id }} .products-container {
      grid-template-rows: auto;
      grid-template-columns: 1fr 1fr;
    }

    #shopify-section-{{ section.id }} .products-grid {
      grid-template-columns: 1fr;
    }
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} gradient isolate section-{{ section.id }}">
  <div class="page-width section-{{ section.id }}-padding">
    {%- if section.settings.heading != blank -%}
      <h2 class="collage-wrapper-title {{ section.settings.heading_size }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
        {{ section.settings.heading }}
      </h2>
    {%- endif -%}
    {%- if section.settings.subheading != blank -%}
      <h3 class="collage-wrapper-subtitle{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
        {{ section.settings.subheading }}
      </h3>
    {%- endif -%}
    {%- if section.settings.text_content != blank -%}
      <div class="collage-text-content rte{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
        {{ section.settings.text_content }}
      </div>
    {%- endif -%}
    <div class="collage{% if section.settings.mobile_layout == 'collage' %} collage--mobile{% endif %}">
      {%- if section.settings.collection != blank -%}
        <div class="collection-image">
          {%- if section.settings.collection.image != blank -%}
            {{
              section.settings.collection.image
              | image_url: width: 1500
              | image_tag: loading: 'lazy', sizes: '(min-width: 750px) 50vw, 100vw'
            }}
          {%- else -%}
            {{ 'collection-1' | placeholder_svg_tag: 'placeholder-svg' }}
          {%- endif -%}
        </div>

        <div class="products-container">
          <div class="products-grid slider slider--tablet">
            {%- for product in section.settings.collection.products -%}
              <div class="collection-product{% if forloop.index <= 2 %} active{% endif %}">
                {% render 'card-product',
                  card_product: product,
                  media_aspect_ratio: 'adapt',
                  show_secondary_image: true,
                  show_vendor: section.settings.show_vendor,
                  show_rating: section.settings.show_rating,
                  quick_add: section.settings.quick_add,
                  section_id: section.id
                %}
              </div>
            {%- endfor -%}
          </div>

          {%- if section.settings.show_slider_buttons -%}
            <div class="slider-buttons no-js-hidden">
              <button
                type="button"
                class="slider-button slider-button--prev"
                name="previous"
                aria-label="{{ 'general.slider.previous_slide' | t }}"
              >
                <span class="svg-wrapper">
                  {{- 'icon-caret.svg' | inline_asset_content -}}
                </span>
              </button>
              <div class="slider-counter caption">
                <span class="slider-counter--current">1</span>
                <span aria-hidden="true"> / </span>
                <span class="slider-counter--total">{{ section.settings.collection.products.size }}</span>
              </div>
              <button
                type="button"
                class="slider-button slider-button--next"
                name="next"
                aria-label="{{ 'general.slider.next_slide' | t }}"
              >
                <span class="svg-wrapper">
                  {{- 'icon-caret.svg' | inline_asset_content -}}
                </span>
              </button>
            </div>
          {%- endif -%}

          {%- if section.settings.show_view_all -%}
            <div class="view-all-button">
              <a href="{{ section.settings.collection.url }}" class="button">
                {{ 'sections.collection_list.view_all' | t }}
              </a>
            </div>
          {%- endif -%}
        </div>
      {%- endif -%}
    </div>
  </div>
</div>

