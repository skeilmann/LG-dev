{%- comment -%}
Filename: LG-favorites.liquid
Purpose: Display user's favorite products from localStorage
Dependencies: card-product snippet, favorites-page.js, slider-component
Created: 2025-01-15
Updated: 2025-11-13
{%- endcomment -%}

{{ 'component-card.css' | asset_url | stylesheet_tag }}
{{ 'component-price.css' | asset_url | stylesheet_tag }}
{{ 'component-slider.css' | asset_url | stylesheet_tag }}
{{ 'component-favorites.css' | asset_url | stylesheet_tag }}

<script src="{{ 'favorites-page.js' | asset_url }}" defer="defer"></script>

{%- liquid
  assign columns_desktop = section.settings.columns_desktop | default: 4
  assign columns_mobile = section.settings.columns_mobile | default: 2
  assign enable_slider = section.settings.enable_desktop_slider
  assign show_vendor = section.settings.show_vendor
  assign show_rating = section.settings.show_rating
  assign image_ratio = section.settings.image_ratio | default: 'square'
  assign image_shape = section.settings.image_shape | default: 'default'
-%}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="section-{{ section.id }}-padding gradient color-{{ section.settings.color_scheme }}">
  <div class="page-width">
    <div class="title-wrapper center">
      <h1 class="title title--primary">
        {{ 'favorites.title' | t }}
      </h1>
    </div>

    <slider-component class="{% if enable_slider %}slider-component-desktop{% else %}page-width-desktop{% endif %}">
      <ul
        id="Favorites-Grid-{{ section.id }}"
        class="grid product-grid contains-card contains-card--product grid--{{ columns_mobile }}-col-tablet-down grid--{{ columns_desktop }}-col-desktop{% if enable_slider %} slider slider--desktop{% endif %}"
        role="list"
        aria-label="{{ 'favorites.title' | t }}"
        data-section-id="{{ section.id }}"
        data-show-vendor="{{ show_vendor }}"
        data-show-rating="{{ show_rating }}"
        data-image-ratio="{{ image_ratio }}"
        data-image-shape="{{ image_shape }}"
        data-enable-slider="{{ enable_slider }}"
      >
        {%- comment -%}Products will be loaded dynamically via JavaScript{%- endcomment -%}
        <li class="grid__item grid__item--full-width">
          <div class="favorites-loading">
            {% render 'loading-spinner' %}
          </div>
        </li>
      </ul>

      {% if enable_slider %}
        <div class="slider-buttons no-js-hidden">
          <button
            type="button"
            class="slider-button slider-button--prev"
            name="previous"
            aria-label="{{ 'general.slider.previous_slide' | t }}"
            aria-controls="Favorites-Grid-{{ section.id }}"
          >
            <span class="svg-wrapper">
              {{- 'icon-caret.svg' | inline_asset_content -}}
            </span>
          </button>
          <div class="slider-counter caption">
            <span class="slider-counter--current">1</span>
            <span aria-hidden="true"> / </span>
            <span class="visually-hidden">{{ 'general.slider.of' | t }}</span>
            <span class="slider-counter--total">1</span>
          </div>
          <button
            type="button"
            class="slider-button slider-button--next"
            name="next"
            aria-label="{{ 'general.slider.next_slide' | t }}"
            aria-controls="Favorites-Grid-{{ section.id }}"
          >
            <span class="svg-wrapper">
              {{- 'icon-caret.svg' | inline_asset_content -}}
            </span>
          </button>
        </div>
      {% endif %}
    </slider-component>

    {%- comment -%}Empty state template{%- endcomment -%}
    <template id="favorites-empty-template">
      <li class="grid__item grid__item--full-width">
        <div class="collection collection--empty">
          <div class="title-wrapper center">
            <h2 class="title">{{ 'favorites.empty' | t }}</h2>
            <a href="{{ routes.collections_url }}" class="button">
              {{ 'favorites.browse_products' | t }}
            </a>
          </div>
        </div>
      </li>
    </template>
  </div>
</div>

