<div
  {% if section.settings.sticky_header_type != 'none' %}
    sticky-header data-sticky-type="{{ section.settings.sticky_header_type }}"
  {% else %}
    div
  {% endif %}
  class="header-wrapper color-{{ section.settings.color_scheme }} gradient{% if section.settings.show_line_separator %} header-wrapper--border-bottom{% endif %}"
>
  {%- liquid
    assign social_links = false
    assign localization_forms = false

    if settings.social_twitter_link != blank or settings.social_facebook_link != blank or settings.social_pinterest_link != blank or settings.social_instagram_link != blank or settings.social_youtube_link != blank or settings.social_vimeo_link != blank or settings.social_tiktok_link != blank or settings.social_tumblr_link != blank or settings.social_snapchat_link != blank
      assign social_links = true
    endif

    if localization.available_countries.size > 1 and section.settings.enable_country_selector or section.settings.enable_language_selector and localization.available_languages.size > 1
      assign localization_forms = true
    endif
  -%}

  <header class="header header--{{ section.settings.logo_position }} header--mobile-{{ section.settings.mobile_logo_position }} page-width{% if section.settings.menu_type_desktop == 'drawer' %} drawer-menu{% endif %}{% if section.settings.menu != blank %} header--has-menu{% endif %}{% if has_app_block %} header--has-app{% endif %}{% if social_links %} header--has-social{% endif %}{% if shop.customer_accounts_enabled %} header--has-account{% endif %}{% if localization_forms %} header--has-localizations{% endif %}">
    <!-- Mobile menu toggle -->
    <button
      type="button"
      class="header__mobile-menu-toggle"
      aria-label="{{ 'sections.header.menu' | t }}"
      aria-expanded="false"
      aria-controls="mobile-menu"
    >
      <span class="svg-wrapper">{{ 'icon-hamburger.svg' | inline_asset_content }}</span>
    </button>

    <div class="header__layout">
      <!-- Left Menu -->
      <nav class="header__left-menu" role="navigation" aria-label="{{ 'sections.header.menu' | t }}">
        <ul class="list-menu list-menu--inline" role="list">
          <!-- Catalog Mega Menu -->
          <li>
            <div class="header__menu-item-wrapper mega-menu-wrapper">
              {%- assign catalog_menu = null -%}
              {%- for block in section.blocks -%}
                {%- if block.type == 'catalog_menu' and block.settings.catalog_menu != blank -%}
                  {%- assign catalog_menu = block.settings.catalog_menu -%}
                  {%- break -%}
                {%- endif -%}
              {%- endfor -%}

              {%- if catalog_menu != blank -%}
                <a
                  href="{{ catalog_menu.url | default: routes.collections_url }}"
                  class="header__menu-item header__menu-item--mega"
                  aria-expanded="false"
                  aria-controls="mega-menu-catalog"
                  aria-haspopup="true"
                >
                  {{ 'sections.header.menu_items.catalog' | t }}
                </a>

                <div
                  id="mega-menu-catalog"
                  class="mega-menu-dropdown"
                  role="menu"
                  aria-hidden="true"
                  aria-label="{{ 'sections.header.menu_items.catalog' | t }} {{ 'sections.header.mega_menu' | t }}"
                >
                  <div class="mega-menu-content">
                    <div class="mega-menu-columns">
                      <!-- First Column: Categories -->
                      <div class="mega-menu-column mega-menu-categories">
                        <h3 class="mega-menu-title">{{ 'sections.header.categories' | t }}</h3>
                        <ul class="mega-menu-list" role="list">
                          {%- for link in catalog_menu.links -%}
                            <li>
                              <a
                                href="{{ link.url }}"
                                class="mega-menu-link mega-menu-category"
                                role="menuitem"
                                data-category-handle="{{ link.handle }}"
                                {% if link.current %}
                                  aria-current="page"
                                {% endif %}
                              >
                                {{ link.title | escape }}
                              </a>

                              {%- if link.links != blank -%}
                                <ul class="mega-menu-subcategories" data-parent="{{ link.handle }}">
                                  {%- for sublink in link.links -%}
                                    <li>
                                      <a
                                        href="{{ sublink.url }}"
                                        class="mega-menu-sublink"
                                        role="menuitem"
                                        data-collection-handle="{{ sublink.handle }}"
                                        {% if sublink.current %}
                                          aria-current="page"
                                        {% endif %}
                                      >
                                        {{ sublink.title | escape }}
                                      </a>
                                    </li>
                                  {%- endfor -%}
                                </ul>
                              {%- endif -%}
                            </li>
                          {%- endfor -%}
                        </ul>
                      </div>

                      <!-- Second Column: Subcategories -->
                      <div class="mega-menu-column mega-menu-subcategories-display">
                        <h3 class="mega-menu-title mega-menu-subcategory-title">
                          {{ 'sections.header.subcategories' | t }}
                        </h3>
                        <div class="mega-menu-subcategory-content">
                          <!-- Subcategories will be populated dynamically -->
                        </div>
                      </div>

                      <!-- Third Column: Featured Image -->
                      <div class="mega-menu-column mega-menu-image">
                        <div class="mega-menu-image-container">
                          <div class="mega-menu-featured-image">
                            {%- comment -%} Default fallback image {%- endcomment -%}
                            <img
                              src="{{ settings.logo | default: 'logo.png' | asset_url }}"
                              alt="{{ shop.name | escape }}"
                              class="mega-menu-default-image"
                              loading="lazy"
                              width="200"
                              height="200"
                            >
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              {%- else -%}
                <!-- Fallback to left menu if no catalog menu is set -->
                <a
                  href="{{ routes.collections_url }}"
                  class="header__menu-item header__menu-item--mega"
                  aria-expanded="false"
                  aria-controls="mega-menu-catalog"
                  aria-haspopup="true"
                >
                  {{ 'sections.header.menu_items.catalog' | t }}
                </a>

                <div
                  id="mega-menu-catalog"
                  class="mega-menu-dropdown"
                  role="menu"
                  aria-hidden="true"
                  aria-label="{{ 'sections.header.menu_items.catalog' | t }} {{ 'sections.header.mega_menu' | t }}"
                >
                  <div class="mega-menu-content">
                    <div class="mega-menu-columns">
                      <div class="mega-menu-column mega-menu-categories">
                        <h3 class="mega-menu-title">{{ 'sections.header.categories' | t }}</h3>
                        <ul class="mega-menu-list" role="list">
                          {%- assign left_menu = null -%}
                          {%- for block in section.blocks -%}
                            {%- if block.type == 'left_menu' and block.settings.left_menu != blank -%}
                              {%- assign left_menu = block.settings.left_menu -%}
                              {%- break -%}
                            {%- endif -%}
                          {%- endfor -%}

                          {%- if left_menu != blank -%}
                            {%- for link in left_menu.links -%}
                              <li>
                                <a
                                  href="{{ link.url }}"
                                  class="mega-menu-link mega-menu-category"
                                  role="menuitem"
                                  data-category-handle="{{ link.handle }}"
                                  {% if link.current %}
                                    aria-current="page"
                                  {% endif %}
                                >
                                  {{ link.title | escape }}
                                </a>

                                {%- if link.links != blank -%}
                                  <ul class="mega-menu-subcategories" data-parent="{{ link.handle }}">
                                    {%- for sublink in link.links -%}
                                      <li>
                                        <a
                                          href="{{ sublink.url }}"
                                          class="mega-menu-sublink"
                                          role="menuitem"
                                          data-collection-handle="{{ sublink.handle }}"
                                          {% if sublink.current %}
                                            aria-current="page"
                                          {% endif %}
                                        >
                                          {{ sublink.title | escape }}
                                        </a>
                                      </li>
                                    {%- endfor -%}
                                  </ul>
                                {%- endif -%}
                              </li>
                            {%- endfor -%}
                          {%- endif -%}
                        </ul>
                      </div>
                      <div class="mega-menu-column mega-menu-subcategories-display">
                        <h3 class="mega-menu-title mega-menu-subcategory-title">
                          {{ 'sections.header.subcategories' | t }}
                        </h3>
                        <div class="mega-menu-subcategory-content">
                          <!-- Subcategories will be populated dynamically -->
                        </div>
                      </div>
                      <div class="mega-menu-column mega-menu-image">
                        <div class="mega-menu-image-container">
                          <div class="mega-menu-featured-image">
                            <img
                              src="{{ settings.logo | default: 'logo.png' | asset_url }}"
                              alt="{{ shop.name | escape }}"
                              class="mega-menu-default-image"
                              loading="lazy"
                              width="200"
                              height="200"
                            >
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              {%- endif -%}
            </div>
          </li>

          <!-- Left Menu Items -->
          {%- assign left_menu = null -%}
          {%- for block in section.blocks -%}
            {%- if block.type == 'left_menu' and block.settings.left_menu != blank -%}
              {%- assign left_menu = block.settings.left_menu -%}
              {%- break -%}
            {%- endif -%}
          {%- endfor -%}

          {%- if left_menu != blank -%}
            {%- for link in left_menu.links -%}
              <li>
                {%- if link.links != blank -%}
                  <div class="header__menu-item-wrapper">
                    <button
                      type="button"
                      class="header__menu-item header__menu-item--dropdown"
                      aria-expanded="false"
                      aria-controls="dropdown-{{ link.handle }}"
                    >
                      {{ link.title | escape }}
                    </button>
                    <ul
                      id="dropdown-{{ link.handle }}"
                      class="header__dropdown-menu"
                      role="menu"
                      aria-hidden="true"
                    >
                      {%- for childlink in link.links -%}
                        <li role="none">
                          <a
                            href="{{ childlink.url }}"
                            class="header__dropdown-item"
                            role="menuitem"
                            {% if childlink.current %}
                              aria-current="page"
                            {% endif %}
                          >
                            {{ childlink.title | escape }}
                          </a>
                        </li>
                      {%- endfor -%}
                    </ul>
                  </div>
                {%- else -%}
                  <a
                    href="{{ link.url }}"
                    class="header__menu-item"
                    {% if link.current %}
                      aria-current="page"
                    {% endif %}
                  >
                    {{ link.title | escape }}
                  </a>
                {%- endif -%}
              </li>
            {%- endfor -%}
          {%- endif -%}
        </ul>
      </nav>

      <!-- Center Logo -->
      <div class="header__center-logo">
        {%- if request.page_type == 'index' -%}
          <h1 class="header__heading">
        {%- endif -%}
        <a href="{{ routes.root_url }}" class="header__heading-link link link--text focus-inset">
          {%- if settings.logo != blank -%}
            <div class="header__heading-logo-wrapper">
              {%- assign logo_alt = settings.logo.alt | default: shop.name | escape -%}
              {%- assign logo_height = settings.logo_width | divided_by: settings.logo.aspect_ratio -%}
              {% capture sizes %}(max-width: {{ settings.logo_width | times: 2 }}px) 50vw, {{ settings.logo_width }}px{% endcapture %}
              {% capture widths %}{{ settings.logo_width }}, {{ settings.logo_width | times: 1.5 | round }}, {{ settings.logo_width | times: 2 }}{% endcapture %}
              {{
                settings.logo
                | image_url: width: 600
                | image_tag:
                  class: 'header__heading-logo motion-reduce',
                  widths: widths,
                  height: logo_height,
                  width: settings.logo_width,
                  alt: logo_alt,
                  sizes: sizes,
                  preload: true
              }}
            </div>
          {%- else -%}
            <span class="h2">{{ shop.name }}</span>
          {%- endif -%}
        </a>
        {%- if request.page_type == 'index' -%}
          </h1>
        {%- endif -%}
      </div>

      <!-- Right Menu -->
      <nav class="header__right-menu" role="navigation" aria-label="{{ 'sections.header.menu' | t }}">
        <ul class="list-menu list-menu--inline" role="list">
          {%- for block in section.blocks -%}
            {%- if block.type == 'right_menu' and block.settings.right_menu != blank -%}
              {%- for link in block.settings.right_menu.links -%}
                <li>
                  {%- if link.links != blank -%}
                    <div class="header__menu-item-wrapper">
                      <button
                        type="button"
                        class="header__menu-item header__menu-item--dropdown"
                        aria-expanded="false"
                        aria-controls="dropdown-right-{{ link.handle }}"
                      >
                        {{ link.title | escape }}
                      </button>
                      <ul
                        id="dropdown-right-{{ link.handle }}"
                        class="header__dropdown-menu"
                        role="menu"
                        aria-hidden="true"
                      >
                        {%- for childlink in link.links -%}
                          <li role="none">
                            <a
                              href="{{ childlink.url }}"
                              class="header__dropdown-item"
                              role="menuitem"
                              {% if childlink.current %}
                                aria-current="page"
                              {% endif %}
                            >
                              {{ childlink.title | escape }}
                            </a>
                          </li>
                        {%- endfor -%}
                      </ul>
                    </div>
                  {%- else -%}
                    <a
                      href="{{ link.url }}"
                      class="header__menu-item"
                      {% if link.current %}
                        aria-current="page"
                      {% endif %}
                    >
                      {{ link.title | escape }}
                    </a>
                  {%- endif -%}
                </li>
              {%- endfor -%}
            {%- endif -%}
          {%- endfor -%}
        </ul>

        <!-- Utility Icons -->
        <div class="header__icons{% if section.settings.enable_country_selector or section.settings.enable_language_selector %} header__icons--localization header-localization{% endif %}">
          <div class="desktop-localization-wrapper">
            {%- if section.settings.enable_country_selector and localization.available_countries.size > 1 -%}
              <localization-form class="small-hide medium-hide" data-prevent-hide>
                {%- form 'localization', id: 'HeaderCountryForm', class: 'localization-form' -%}
                  <div>
                    <h2 class="visually-hidden" id="HeaderCountryLabel">{{ 'localization.country_label' | t }}</h2>
                    {%- render 'country-localization', localPosition: 'HeaderCountry' -%}
                  </div>
                {%- endform -%}
              </localization-form>
            {% endif %}

            {%- if section.settings.enable_language_selector and localization.available_languages.size > 1 -%}
              <localization-form class="small-hide medium-hide" data-prevent-hide>
                {%- form 'localization', id: 'HeaderLanguageForm', class: 'localization-form' -%}
                  <div>
                    <h2 class="visually-hidden" id="HeaderLanguageLabel">{{ 'localization.language_label' | t }}</h2>
                    {%- render 'language-localization', localPosition: 'HeaderLanguage' -%}
                  </div>
                {%- endform -%}
              </localization-form>
            {%- endif -%}
          </div>

          {% render 'header-search', input_id: 'Search-In-Modal' %}
          <button
            type="button"
            class="header__icon header__icon--favorites link focus-inset"
            id="favorites-icon-bubble"
          >
            <span class="svg-wrapper">{{ 'icon-heart.svg' | inline_asset_content }}</span>
            <span class="visually-hidden">{{ 'customer.favorites.title' | t }}</span>
            {% render 'favorites-icon-bubble' %}
          </button>

          <a
            href="{{ routes.cart_url }}"
            class="header__icon header__icon--cart link focus-inset"
            id="cart-icon-bubble"
          >
            {% if cart == empty %}
              <span class="svg-wrapper">{{ 'icon-cart-empty.svg' | inline_asset_content }}</span>
            {% else %}
              <span class="svg-wrapper">{{ 'icon-cart.svg' | inline_asset_content }}</span>
            {% endif %}
            <span class="visually-hidden">{{ 'templates.cart.cart' | t }}</span>
            {%- if cart != empty -%}
              <div class="cart-count-bubble">
                {%- if cart.item_count < 100 -%}
                  <span aria-hidden="true">{{ cart.item_count }}</span>
                {%- endif -%}
                <span class="visually-hidden">{{ 'sections.header.cart_count' | t: count: cart.item_count }}</span>
              </div>
            {%- endif -%}
          </a>

          {%- if shop.customer_accounts_enabled -%}
            <a
              href="{%- if customer -%}{{ routes.account_url }}{%- else -%}{{ routes.account_login_url }}{%- endif -%}"
              class="header__icon header__icon--account link focus-inset"
              rel="nofollow"
            >
              {%- if section.settings.enable_customer_avatar -%}
                <account-icon>
                  {%- if customer and customer.has_avatar? -%}
                    {{ customer | avatar }}
                  {%- else -%}
                    <span class="svg-wrapper">{{ 'icon-account.svg' | inline_asset_content }}</span>
                  {%- endif -%}
                </account-icon>
              {%- else -%}
                <span class="svg-wrapper">{{ 'icon-account.svg' | inline_asset_content }}</span>
              {%- endif -%}
              <span class="visually-hidden">
                {%- liquid
                  if customer
                    echo 'customer.account_fallback' | t
                  else
                    echo 'customer.log_in' | t
                  endif
                -%}
              </span>
            </a>
          {%- endif -%}

          {%- for block in section.blocks -%}
            {% render block %}
          {%- endfor -%}
        </div>
      </nav>
    </div>

    <!-- Mobile Menu -->
    <div
      id="mobile-menu"
      class="header__mobile-menu"
      aria-hidden="true"
      role="dialog"
      aria-modal="true"
      aria-label="{{ 'sections.header.menu' | t }}"
    >
      <div class="header__mobile-menu-header">
        <h2 class="h3">{{ 'sections.header.menu' | t }}</h2>
        <button
          type="button"
          class="header__mobile-menu-close"
          aria-label="{{ 'accessibility.close' | t }}"
        >
          ×
        </button>
      </div>
      <div class="header__mobile-menu-content">
        <nav role="navigation">
          <ul class="list-menu" role="list">
            <!-- Mobile Catalog Accordion -->
            <li>
              <details class="mobile-catalog-accordion">
                <summary class="header__mobile-menu-item mobile-catalog-summary">
                  {{ 'sections.header.menu_items.catalog' | t }}
                  <span class="mobile-accordion-icon">
                    <svg width="12" height="8" viewBox="0 0 12 8" fill="none">
                      <path d="M1 1L6 6L11 1" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                  </span>
                </summary>
                <div class="mobile-catalog-content">
                  {%- assign catalog_menu = null -%}
                  {%- for block in section.blocks -%}
                    {%- if block.type == 'catalog_menu' and block.settings.catalog_menu != blank -%}
                      {%- assign catalog_menu = block.settings.catalog_menu -%}
                      {%- break -%}
                    {%- endif -%}
                  {%- endfor -%}

                  {%- if catalog_menu != blank -%}
                    {%- for link in catalog_menu.links -%}
                      <div class="mobile-category-group">
                        {%- if link.links != blank -%}
                          <details class="mobile-subcategory-accordion">
                            <summary class="mobile-category-title">
                              {{ link.title | escape }}
                              <span class="mobile-accordion-icon">
                                <svg width="12" height="8" viewBox="0 0 12 8" fill="none">
                                  <path d="M1 1L6 6L11 1" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                </svg>
                              </span>
                            </summary>
                            <div class="mobile-subcategory-content">
                              <ul class="mobile-subcategory-list">
                                {%- for sublink in link.links -%}
                                  <li>
                                    <a
                                      href="{{ sublink.url }}"
                                      class="mobile-subcategory-link"
                                      data-collection-handle="{{ sublink.handle }}"
                                      {% if sublink.current %}
                                        aria-current="page"
                                      {% endif %}
                                    >
                                      {{ sublink.title | escape }}
                                    </a>
                                  </li>
                                {%- endfor -%}
                              </ul>

                              <!-- Lazy-loaded image for mobile -->
                              <div class="mobile-category-image" data-category="{{ link.handle }}">
                                <div class="mobile-image-placeholder">
                                  <span class="mobile-loading-text">{{ 'sections.header.loading_image' | t }}</span>
                                </div>
                              </div>
                            </div>
                          </details>
                        {%- else -%}
                          <a
                            href="{{ link.url }}"
                            class="mobile-category-single-link"
                            {% if link.current %}
                              aria-current="page"
                            {% endif %}
                          >
                            {{ link.title | escape }}
                          </a>
                        {%- endif -%}
                      </div>
                    {%- endfor -%}
                  {%- else -%}
                    <!-- Fallback to left menu -->
                    {%- assign left_menu = null -%}
                    {%- for block in section.blocks -%}
                      {%- if block.type == 'left_menu' and block.settings.left_menu != blank -%}
                        {%- assign left_menu = block.settings.left_menu -%}
                        {%- break -%}
                      {%- endif -%}
                    {%- endfor -%}

                    {%- if left_menu != blank -%}
                      {%- for link in left_menu.links -%}
                        <div class="mobile-category-group">
                          {%- if link.links != blank -%}
                            <details class="mobile-subcategory-accordion">
                              <summary class="mobile-category-title">
                                {{ link.title | escape }}
                                <span class="mobile-accordion-icon">
                                  <svg width="12" height="8" viewBox="0 0 12 8" fill="none">
                                    <path d="M1 1L6 6L11 1" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                  </svg>
                                </span>
                              </summary>
                              <div class="mobile-subcategory-content">
                                <ul class="mobile-subcategory-list">
                                  {%- for sublink in link.links -%}
                                    <li>
                                      <a
                                        href="{{ sublink.url }}"
                                        class="mobile-subcategory-link"
                                        data-collection-handle="{{ sublink.handle }}"
                                        {% if sublink.current %}
                                          aria-current="page"
                                        {% endif %}
                                      >
                                        {{ sublink.title | escape }}
                                      </a>
                                    </li>
                                  {%- endfor -%}
                                </ul>
                                <div class="mobile-category-image" data-category="{{ link.handle }}">
                                  <div class="mobile-image-placeholder">
                                    <span class="mobile-loading-text">{{ 'sections.header.loading_image' | t }}</span>
                                  </div>
                                </div>
                              </div>
                            </details>
                          {%- else -%}
                            <a
                              href="{{ link.url }}"
                              class="mobile-category-single-link"
                              {% if link.current %}
                                aria-current="page"
                              {% endif %}
                            >
                              {{ link.title | escape }}
                            </a>
                          {%- endif -%}
                        </div>
                      {%- endfor -%}
                    {%- endif -%}
                  {%- endif -%}
                </div>
              </details>
            </li>

            <!-- Mobile Left Menu Items -->
            {%- assign left_menu = null -%}
            {%- for block in section.blocks -%}
              {%- if block.type == 'left_menu' and block.settings.left_menu != blank -%}
                {%- assign left_menu = block.settings.left_menu -%}
                {%- break -%}
              {%- endif -%}
            {%- endfor -%}

            {%- if left_menu != blank -%}
              {%- for link in left_menu.links -%}
                <li>
                  {%- if link.links != blank -%}
                    <details>
                      <summary class="header__mobile-menu-item">
                        {{ link.title | escape }}
                      </summary>
                      <div class="header__mobile-dropdown">
                        {%- for childlink in link.links -%}
                          <a
                            href="{{ childlink.url }}"
                            class="header__mobile-dropdown-item"
                            role="menuitem"
                            {% if childlink.current %}
                              aria-current="page"
                            {% endif %}
                          >
                            {{ childlink.title | escape }}
                          </a>
                        {%- endfor -%}
                      </div>
                    </details>
                  {%- else -%}
                    <a
                      href="{{ link.url }}"
                      class="header__mobile-menu-item"
                      {% if link.current %}
                        aria-current="page"
                      {% endif %}
                    >
                      {{ link.title | escape }}
                    </a>
                  {%- endif -%}
                </li>
              {%- endfor -%}
            {%- endif -%}

            <!-- Mobile Right Menu Items -->
            {%- for block in section.blocks -%}
              {%- if block.type == 'right_menu' and block.settings.right_menu != blank -%}
                {%- for link in block.settings.right_menu.links -%}
                  <li>
                    {%- if link.links != blank -%}
                      <details>
                        <summary class="header__mobile-menu-item">
                          {{ link.title | escape }}
                        </summary>
                        <div class="header__mobile-dropdown">
                          {%- for childlink in link.links -%}
                            <a
