<script>
  // Mega Menu Functionality
  document.addEventListener('DOMContentLoaded', function () {
    const megaMenuWrapper = document.querySelector('.mega-menu-wrapper');
    const megaMenuDropdown = document.querySelector('.mega-menu-dropdown');
    const megaMenuTrigger = document.querySelector('.header__menu-item--mega');
    const categoriesColumn = document.querySelector('.mega-menu-categories');
    const subcategoriesDisplay = document.querySelector('.mega-menu-subcategories-display');
    const subcategoryContent = document.querySelector('.mega-menu-subcategory-content');
    const subcategoryTitle = document.querySelector('.mega-menu-subcategory-title');
    const imageContainer = document.querySelector('.mega-menu-featured-image');

    if (!megaMenuWrapper || !megaMenuDropdown) return;

    let hoverTimeout;
    let currentActiveCategory = null;
    let imageCache = new Map();

    // Hover events for mega menu
    megaMenuWrapper.addEventListener('mouseenter', function () {
      clearTimeout(hoverTimeout);
      openMegaMenu();
    });

    megaMenuWrapper.addEventListener('mouseleave', function () {
      hoverTimeout = setTimeout(() => {
        closeMegaMenu();
      }, 150);
    });

    // Category hover events
    if (categoriesColumn) {
      const categoryLinks = categoriesColumn.querySelectorAll('.mega-menu-category');

      categoryLinks.forEach((link) => {
        link.addEventListener('mouseenter', function () {
          handleCategoryHover(this);
        });
      });

      // Set first category as active by default
      if (categoryLinks.length > 0) {
        handleCategoryHover(categoryLinks[0]);
      }
    }

    function openMegaMenu() {
      megaMenuTrigger?.setAttribute('aria-expanded', 'true');
      megaMenuDropdown.setAttribute('aria-hidden', 'false');
    }

    function closeMegaMenu() {
      megaMenuTrigger?.setAttribute('aria-expanded', 'false');
      megaMenuDropdown.setAttribute('aria-hidden', 'true');

      // Reset active states
      document.querySelectorAll('.mega-menu-category.active').forEach((cat) => {
        cat.classList.remove('active');
      });
      subcategoriesDisplay?.classList.remove('active');
      currentActiveCategory = null;
    }

    function handleCategoryHover(categoryLink) {
      // Remove active state from previous category
      if (currentActiveCategory) {
        currentActiveCategory.classList.remove('active');
      }

      // Add active state to current category
      categoryLink.classList.add('active');
      currentActiveCategory = categoryLink;

      const categoryHandle = categoryLink.getAttribute('data-category-handle');
      const subcategoriesList = document.querySelector(`[data-parent="${categoryHandle}"]`);

      if (subcategoriesList && subcategoryContent) {
        // Update subcategory title
        if (subcategoryTitle) {
          subcategoryTitle.textContent = categoryLink.textContent.trim();
        }

        // Clear and populate subcategory content
        subcategoryContent.innerHTML = '';
        const subcategoryListClone = subcategoriesList.cloneNode(true);
        subcategoryListClone.classList.add('mega-menu-subcategory-list');
        subcategoryContent.appendChild(subcategoryListClone);

        // Show subcategories column
        subcategoriesDisplay?.classList.add('active');

        // Add hover events to subcategory links for image loading
        const subcategoryLinks = subcategoryContent.querySelectorAll('.mega-menu-sublink');
        subcategoryLinks.forEach((sublink) => {
          sublink.addEventListener('mouseenter', function () {
            handleSubcategoryHover(this);
          });
        });

        // Load image for first subcategory by default
        if (subcategoryLinks.length > 0) {
          handleSubcategoryHover(subcategoryLinks[0]);
        }
      }
    }

    function handleSubcategoryHover(subcategoryLink) {
      // Remove active state from other subcategory links
      document.querySelectorAll('.mega-menu-subcategory-link.active').forEach((link) => {
        link.classList.remove('active');
      });

      // Add active state to current subcategory
      subcategoryLink.classList.add('active');

      const collectionHandle = subcategoryLink.getAttribute('data-collection-handle');
      loadCollectionImage(collectionHandle, subcategoryLink.textContent.trim());
    }

    async function loadCollectionImage(collectionHandle, collectionTitle) {
      if (!imageContainer || !collectionHandle) return;

      // Check cache first
      if (imageCache.has(collectionHandle)) {
        updateImage(imageCache.get(collectionHandle), collectionTitle);
        return;
      }

      try {
        // Fetch collection data
        const response = await fetch(`/collections/${collectionHandle}.js`);

        if (response.ok) {
          const collection = await response.json();
          let imageData = null;

          if (collection.image) {
            imageData = {
              src: collection.image,
              alt: collection.title || collectionTitle,
            };
          }

          // Cache the result (even if null)
          imageCache.set(collectionHandle, imageData);
          updateImage(imageData, collectionTitle);
        } else {
          // Cache null result to avoid repeated failed requests
          imageCache.set(collectionHandle, null);
          updateImage(null, collectionTitle);
        }
      } catch (error) {
        console.warn('Failed to load collection image:', error);
        updateImage(null, collectionTitle);
      }
    }

    function updateImage(imageData, fallbackTitle) {
      if (!imageContainer) return;

      const currentImg = imageContainer.querySelector('img');

      if (imageData && imageData.src) {
        // Create new image element
        const newImg = document.createElement('img');
        newImg.src = imageData.src;
        newImg.alt = imageData.alt || fallbackTitle;
        newImg.loading = 'lazy';
        newImg.classList.add('mega-menu-collection-image');

        newImg.onload = function () {
          // Fade out current image
          if (currentImg) {
            currentImg.style.opacity = '0';
            setTimeout(() => {
              currentImg.remove();
              newImg.classList.add('loaded');
              imageContainer.appendChild(newImg);
            }, 200);
          } else {
            newImg.classList.add('loaded');
            imageContainer.appendChild(newImg);
          }
        };

        newImg.onerror = function () {
          // Fallback to default image
          showDefaultImage(fallbackTitle);
        };
      } else {
        // Show default image
        showDefaultImage(fallbackTitle);
      }
    }

    function showDefaultImage(title) {
      if (!imageContainer) return;

      const currentImg = imageContainer.querySelector('img');
      if (currentImg && currentImg.classList.contains('mega-menu-default-image')) {
        // Already showing default image
        currentImg.alt = title || '{{ shop.name | escape }}';
        return;
      }

      // Create default image
      const defaultImg = document.createElement('img');
      defaultImg.src = '{{ settings.logo | default: "logo.png" | asset_url }}';
      defaultImg.alt = title || '{{ shop.name | escape }}';
      defaultImg.loading = 'lazy';
      defaultImg.classList.add('mega-menu-default-image');

      if (currentImg) {
        currentImg.style.opacity = '0';
        setTimeout(() => {
          currentImg.remove();
          imageContainer.appendChild(defaultImg);
        }, 200);
      } else {
        imageContainer.appendChild(defaultImg);
      }
    }

    // Mobile accordion functionality
    const mobileAccordions = document.querySelectorAll('.mobile-subcategory-accordion');

    mobileAccordions.forEach((accordion) => {
      const summary = accordion.querySelector('.mobile-category-title');
      const imageContainer = accordion.querySelector('.mobile-category-image');

      summary?.addEventListener('click', function () {
        // Lazy load image when accordion opens
        if (!accordion.hasAttribute('open')) {
          setTimeout(() => {
            loadMobileImage(imageContainer);
          }, 300);
        }
      });
    });

    function loadMobileImage(container) {
      if (!container || container.querySelector('img')) return;

      const categoryHandle = container.getAttribute('data-category');
      const placeholder = container.querySelector('.mobile-image-placeholder');

      if (!categoryHandle) return;

      // Get first subcategory link to determine collection
      const firstSublink = container
        .closest('.mobile-subcategory-content')
        ?.querySelector('.mobile-subcategory-link[data-collection-handle]');

      if (!firstSublink) return;

      const collectionHandle = firstSublink.getAttribute('data-collection-handle');

      fetch(`/collections/${collectionHandle}.js`)
        .then((response) => (response.ok ? response.json() : null))
        .then((collection) => {
          if (collection && collection.image) {
            const img = document.createElement('img');
            img.src = collection.image;
            img.alt = collection.title || firstSublink.textContent.trim();
            img.loading = 'lazy';

            img.onload = function () {
              this.classList.add('loaded');
              if (placeholder) {
                placeholder.style.display = 'none';
              }
            };

            container.appendChild(img);
          } else if (placeholder) {
            placeholder.innerHTML = '<span class="mobile-loading-text">{{ "sections.header.no_image" | t }}</span>';
          }
        })
        .catch(() => {
          if (placeholder) {
            placeholder.innerHTML = '<span class="mobile-loading-text">{{ "sections.header.no_image" | t }}</span>';
          }
        });
    }

    // Keyboard accessibility
    document.addEventListener('keydown', function (e) {
      if (e.key === 'Escape' && megaMenuDropdown.getAttribute('aria-hidden') === 'false') {
        closeMegaMenu();
        megaMenuTrigger?.focus();
      }
    });
  });
</script>

