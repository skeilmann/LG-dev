{%- comment -%}
  All styles moved to component-custom-header.css for better performance and maintainability.
  Only minimal dynamic styles remain inline for section-specific settings.
{%- endcomment -%}

{%- style -%}
  /* Dynamic styles that require section settings - kept minimal for performance */
  :root {
    --header-padding-top: {{ section.settings.padding_top | times: 0.5 | round: 0 }}px;
    --header-padding-bottom: {{ section.settings.padding_bottom | times: 0.5 | round: 0 }}px;
    --header-margin-bottom: {{ section.settings.margin_bottom | times: 0.75 | round: 0 }}px;
  }

  {%- if section.settings.sticky_header_type == 'reduce-logo-size' -%}
    .scrolled-past-header .header__heading-logo-wrapper {
      width: 75%;
    }
  {%- endif -%}

  {%- if section.settings.menu_type_desktop != "drawer" -%}
    @media screen and (min-width: 990px) {
      header-drawer {
        display: none;
      }
    }
  {%- endif -%}

  @media screen and (min-width: 750px) {
    :root {
      --header-margin-bottom: {{ section.settings.margin_bottom }}px;
    }
  }

  @media screen and (min-width: 990px) {
    :root {
      --header-padding-top: {{ section.settings.padding_top }}px;
      --header-padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<script src="{{ 'cart-notification.js' | asset_url }}" defer="defer"></script>
<script src="{{ 'custom-header.js' | asset_url }}" defer="defer"></script>

<script>
  // Pass translations to JavaScript for mega menu functionality
  document.documentElement.setAttribute('data-no-image-text', '{{ "sections.header.no_image" | t }}');
</script>

{%- liquid
  for block in section.blocks
    if block.type == '@app'
      assign has_app_block = true
    endif
  endfor
-%}

<div
  {% if section.settings.sticky_header_type != 'none' %}
    sticky-header data-sticky-type="{{ section.settings.sticky_header_type }}"
  {% else %}
    div
  {% endif %}
  class="header-wrapper color-{{ section.settings.color_scheme }} gradient{% if section.settings.show_line_separator %} header-wrapper--border-bottom{% endif %}"
>
  {%- liquid
    assign social_links = false
    assign localization_forms = false

    if settings.social_twitter_link != blank or settings.social_facebook_link != blank or settings.social_pinterest_link != blank or settings.social_instagram_link != blank or settings.social_youtube_link != blank or settings.social_vimeo_link != blank or settings.social_tiktok_link != blank or settings.social_tumblr_link != blank or settings.social_snapchat_link != blank
      assign social_links = true
    endif

    if localization.available_countries.size > 1 and section.settings.enable_country_selector or section.settings.enable_language_selector and localization.available_languages.size > 1
      assign localization_forms = true
    endif
  -%}

  <header class="header header--{{ section.settings.logo_position }} header--mobile-{{ section.settings.mobile_logo_position }} page-width{% if section.settings.menu_type_desktop == 'drawer' %} drawer-menu{% endif %}{% if section.settings.menu != blank %} header--has-menu{% endif %}{% if has_app_block %} header--has-app{% endif %}{% if social_links %} header--has-social{% endif %}{% if shop.customer_accounts_enabled %} header--has-account{% endif %}{% if localization_forms %} header--has-localizations{% endif %}">
    <!-- Mobile menu toggle -->
    <button
      type="button"
      class="header__mobile-menu-toggle"
      aria-label="{{ 'sections.header.menu' | t }}"
      aria-expanded="false"
      aria-controls="mobile-menu"
    >
      <span class="svg-wrapper">{{ 'icon-hamburger.svg' | inline_asset_content }}</span>
    </button>

    <div class="header__layout">
      <!-- Left Menu -->
      <nav class="header__left-menu" role="navigation" aria-label="{{ 'sections.header.menu' | t }}">
        <ul class="list-menu list-menu--inline" role="list">
          <!-- Catalog Mega Menu -->
          <li>
            <div class="header__menu-item-wrapper mega-menu-wrapper">
              {%- assign catalog_menu = null -%}
              {%- for block in section.blocks -%}
                {%- if block.type == 'catalog_menu' and block.settings.catalog_menu != blank -%}
                  {%- assign catalog_menu = block.settings.catalog_menu -%}
                  {%- break -%}
                {%- endif -%}
              {%- endfor -%}

              {%- if catalog_menu != blank -%}
                <button
                  type="button"
                  class="header__menu-item header__menu-item--mega"
                  aria-expanded="false"
                  aria-controls="mega-menu-catalog"
                  aria-haspopup="true"
                >
                  {{ 'sections.header.menu_items.catalog' | t }}
                </button>

                <div
                  id="mega-menu-catalog"
                  class="mega-menu-dropdown"
                  role="menu"
                  aria-hidden="true"
                  aria-label="{{ 'sections.header.menu_items.catalog' | t }} {{ 'sections.header.mega_menu' | t }}"
                >
                  <div class="mega-menu-content">
                    <div class="mega-menu-columns" role="presentation">
                      {%- comment -%}
                        COLUMN 1: Categories (Main menu items)
                        Hovering over items here shows subcategories in Column 2
                      {%- endcomment -%}
                      <div class="mega-menu-column mega-menu-zone-1" role="presentation">
                        <h3 class="mega-menu-title">{{ 'sections.header.categories' | t }}</h3>
                        <ul class="mega-menu-list" role="list">
                          {%- for link in catalog_menu.links -%}
                            <li>
                              <a
                                href="{{ link.url }}"
                                class="mega-menu-link mega-menu-category"
                                role="menuitem"
                                aria-label="{{ 'sections.header.categories' | t }}: {{ link.title | escape }}"
                                data-category-handle="{{ link.handle }}"
                                data-category-title="{{ link.title | escape }}"
                                data-target-list="[data-parent-category='{{ link.handle }}']"
                                data-target-image="[data-category-image='{{ link.handle }}']"
                                {% if link.current %}
                                  aria-current="page"
                                {% endif %}
                              >
                                {{ link.title | escape }}
                              </a>
                            </li>
                          {%- endfor -%}
                        </ul>
                      </div>

                      {%- comment -%}
                        COLUMN 2: Subcategories (Second-level menu items)
                        Shows when Category is hovered. Hovering here shows sub-subcategories in Column 3
                      {%- endcomment -%}
                      <div class="mega-menu-column mega-menu-zone-2" role="presentation">
                        <h3 class="mega-menu-title">{{ 'sections.header.subcategories' | t }}</h3>
                        <div class="mega-menu-subcategory-content">
                          {%- for link in catalog_menu.links -%}
                            {%- if link.links != blank -%}
                              <ul
                                class="mega-menu-list mega-menu-subcategories"
                                data-parent-category="{{ link.handle }}"
                                role="list"
                                aria-hidden="true"
                              >
                                {%- for sublink in link.links -%}
                                  <li>
                                    <a
                                      href="{{ sublink.url }}"
                                      class="mega-menu-link mega-menu-sublink"
                                      role="menuitem"
                                      aria-label="{{ 'sections.header.subcategories' | t }}: {{ sublink.title | escape }}"
                                      data-subcategory-handle="{{ sublink.handle }}"
                                      data-subcategory-title="{{ sublink.title | escape }}"
                                      data-target-list="[data-parent-subcategory='{{ sublink.handle }}']"
                                      data-target-image="[data-subcategory-image='{{ sublink.handle }}']"
                                      {% if sublink.current %}
                                        aria-current="page"
                                      {% endif %}
                                    >
                                      {{ sublink.title | escape }}
                                    </a>
                                  </li>
                                {%- endfor -%}
                              </ul>
                            {%- endif -%}
                          {%- endfor -%}
                        </div>
                      </div>

                      {%- comment -%}
                        COLUMN 3: Sub-subcategories (Third-level menu items)
                        Shows when Subcategory is hovered. Hovering here updates Column 4 image
                      {%- endcomment -%}
                      <div class="mega-menu-column mega-menu-zone-3" role="presentation">
                        <h3 class="mega-menu-title">{{ 'sections.header.sub_subcategories' | t }}</h3>
                        <div class="mega-menu-sub-subcategory-content">
                          {%- for link in catalog_menu.links -%}
                            {%- if link.links != blank -%}
                              {%- for sublink in link.links -%}
                                {%- if sublink.links != blank -%}
                                  <ul
                                    class="mega-menu-list mega-menu-sub-subcategories"
                                    data-parent-subcategory="{{ sublink.handle }}"
                                    role="list"
                                    aria-hidden="true"
                                  >
                                    {%- for sub_sublink in sublink.links -%}
                                      <li>
                                        <a
                                          href="{{ sub_sublink.url }}"
                                          class="mega-menu-link mega-menu-sub-sublink"
                                          role="menuitem"
                                          aria-label="{{ 'sections.header.sub_subcategories' | t }}: {{ sub_sublink.title | escape }}"
                                          data-sub-subcategory-handle="{{ sub_sublink.handle }}"
                                          data-sub-subcategory-title="{{ sub_sublink.title | escape }}"
                                          data-target-image="[data-sub-subcategory-image='{{ sub_sublink.handle }}']"
                                          {% if sub_sublink.current %}
                                            aria-current="page"
                                          {% endif %}
                                        >
                                          {{ sub_sublink.title | escape }}
                                        </a>
                                      </li>
                                    {%- endfor -%}
                                  </ul>
                                {%- endif -%}
                              {%- endfor -%}
                            {%- endif -%}
                          {%- endfor -%}
                        </div>
                      </div>

                      {%- comment -%}
                        COLUMN 4: Collection Image Display
                        Updates based on hovered items from Columns 1, 2, or 3
                        Always shows fallback image (logo or shop name) when no specific image is available
                      {%- endcomment -%}
                      <div class="mega-menu-column mega-menu-zone-4" role="presentation">
                        <div class="mega-menu-image-container">
                          <div class="mega-menu-featured-image">
                            {%- comment -%} Default fallback image - always visible as base layer {%- endcomment -%}
                            {%- if settings.logo != blank -%}
                              {{
                                settings.logo
                                | image_url: width: 200
                                | image_tag:
                                  class: 'mega-menu-default-image',
                                  alt: shop.name,
                                  loading: 'lazy',
                                  width: 200,
                                  height: 200
                              }}
                            {%- else -%}
                              <div class="mega-menu-no-image is-visible">
                                <span>{{ shop.name | escape }}</span>
                              </div>
                            {%- endif -%}

                            {%- comment -%} Category level images - shown when category is hovered {%- endcomment -%}
                            {%- for link in catalog_menu.links -%}
                              {%- if link.object and link.object.image -%}
                                <a href="{{ link.url }}" class="mega-menu-image-link">
                                  {{
                                    link.object.image
                                    | image_url: width: 200
                                    | image_tag:
                                      class: 'mega-menu-category-image',
                                      alt: link.title,
                                      loading: 'lazy',
                                      width: 200,
                                      height: 200,
                                      data-category-image: link.handle
                                  }}
                                </a>
                              {%- endif -%}

                              {%- comment -%} Subcategory level images - shown when subcategory is hovered {%- endcomment -%}
                              {%- if link.links != blank -%}
                                {%- for sublink in link.links -%}
                                  {%- if sublink.object and sublink.object.image -%}
                                    <a href="{{ sublink.url }}" class="mega-menu-image-link">
                                      {{
                                        sublink.object.image
                                        | image_url: width: 200
                                        | image_tag:
                                          class: 'mega-menu-subcategory-image',
                                          alt: sublink.title,
                                          loading: 'lazy',
                                          width: 200,
                                          height: 200,
                                          data-subcategory-image: sublink.handle
                                      }}
                                    </a>
                                  {%- endif -%}

                                  {%- comment -%} Sub-subcategory level images - shown when sub-subcategory is hovered {%- endcomment -%}
                                  {%- if sublink.links != blank -%}
                                    {%- for sub_sublink in sublink.links -%}
                                      {%- if sub_sublink.object and sub_sublink.object.image -%}
                                        <a href="{{ sub_sublink.url }}" class="mega-menu-image-link">
                                          {{
                                            sub_sublink.object.image
                                            | image_url: width: 200
                                            | image_tag:
                                              class: 'mega-menu-sub-subcategory-image',
                                              alt: sub_sublink.title,
                                              loading: 'lazy',
                                              width: 200,
                                              height: 200,
                                              data-sub-subcategory-image: sub_sublink.handle
                                          }}
                                        </a>
                                      {%- endif -%}
                                    {%- endfor -%}
                                  {%- endif -%}
                                {%- endfor -%}
                              {%- endif -%}
                            {%- endfor -%}
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              {%- else -%}
                <!-- Fallback to left menu if no catalog menu is set -->
                <a
                  href="{{ routes.collections_url }}"
                  class="header__menu-item header__menu-item--mega"
                  aria-expanded="false"
                  aria-controls="mega-menu-catalog"
                  aria-haspopup="true"
                >
                  {{ 'sections.header.menu_items.catalog' | t }}
                </a>

                <div
                  id="mega-menu-catalog"
                  class="mega-menu-dropdown"
                  role="menu"
                  aria-hidden="true"
                  aria-label="{{ 'sections.header.menu_items.catalog' | t }} {{ 'sections.header.mega_menu' | t }}"
                >
                  <div class="mega-menu-content">
                    <nav class="mega-menu-columns" aria-label="{{ 'sections.header.mega_menu' | t }}">
                      {%- assign left_menu = null -%}
                      {%- for block in section.blocks -%}
                        {%- if block.type == 'left_menu' and block.settings.left_menu != blank -%}
                          {%- assign left_menu = block.settings.left_menu -%}
                          {%- break -%}
                        {%- endif -%}
                      {%- endfor -%}

                      {%- comment -%}
                        ZONE 1: Categories (Fallback using left menu)
                        Displays main categories with hover/click interactions
                      {%- endcomment -%}
                      <div class="mega-menu-column mega-menu-zone-1">
                        <h3 class="mega-menu-title">{{ 'sections.header.categories' | t }}</h3>
                        <ul class="mega-menu-list" role="list">
                          {%- if left_menu != blank -%}
                            {%- for link in left_menu.links -%}
                              <li>
                                <a
                                  href="{{ link.url }}"
                                  class="mega-menu-link mega-menu-category"
                                  role="menuitem"
                                  aria-label="{{ 'sections.header.categories' | t }}: {{ link.title | escape }}"
                                  data-category-handle="{{ link.handle }}"
                                  {% if link.current %}
                                    aria-current="page"
                                  {% endif %}
                                >
                                  {{ link.title | escape }}
                                </a>
                              </li>
                            {%- endfor -%}
                          {%- endif -%}
                        </ul>
                      </div>

                      {%- comment -%}
                        ZONE 2: Subcategories (Fallback using left menu)
                        Shows subcategories when a category is hovered/selected
                      {%- endcomment -%}
                      <div class="mega-menu-column mega-menu-zone-2">
                        <h3 class="mega-menu-title">{{ 'sections.header.subcategories' | t }}</h3>
                        <div class="mega-menu-subcategory-content">
                          {%- if left_menu != blank -%}
                            {%- for link in left_menu.links -%}
                              {%- if link.links != blank -%}
                                <ul
                                  class="mega-menu-list mega-menu-subcategories"
                                  data-parent="{{ link.handle }}"
                                  role="list"
                                >
                                  {%- for sublink in link.links -%}
                                    <li>
                                      <a
                                        href="{{ sublink.url }}"
                                        class="mega-menu-link mega-menu-sublink"
                                        role="menuitem"
                                        aria-label="{{ 'sections.header.subcategories' | t }}: {{ sublink.title | escape }}"
                                        data-subcategory-handle="{{ sublink.handle }}"
                                        {% if sublink.current %}
                                          aria-current="page"
                                        {% endif %}
                                      >
                                        {{ sublink.title | escape }}
                                      </a>
                                    </li>
                                  {%- endfor -%}
                                </ul>
                              {%- endif -%}
                            {%- endfor -%}
                          {%- endif -%}
                        </div>
                      </div>

                      {%- comment -%}
                        ZONE 3: Sub-subcategories (Fallback using left menu)
                        Shows sub-subcategories when a subcategory is hovered/selected
                      {%- endcomment -%}
                      <div class="mega-menu-column mega-menu-zone-3">
                        <h3 class="mega-menu-title">{{ 'sections.header.sub_subcategories' | t }}</h3>
                        <div class="mega-menu-sub-subcategory-content">
                          {%- if left_menu != blank -%}
                            {%- for link in left_menu.links -%}
                              {%- if link.links != blank -%}
                                {%- for sublink in link.links -%}
                                  {%- if sublink.links != blank -%}
                                    <ul
                                      class="mega-menu-list mega-menu-sub-subcategories"
                                      data-parent="{{ sublink.handle }}"
                                      role="list"
                                    >
                                      {%- for sub_sublink in sublink.links -%}
                                        <li>
                                          <a
                                            href="{{ sub_sublink.url }}"
                                            class="mega-menu-link mega-menu-sub-sublink"
                                            role="menuitem"
                                            aria-label="{{ 'sections.header.sub_subcategories' | t }}: {{ sub_sublink.title | escape }}"
                                            {% if sub_sublink.current %}
                                              aria-current="page"
                                            {% endif %}
                                          >
                                            {{ sub_sublink.title | escape }}
                                          </a>
                                        </li>
                                      {%- endfor -%}
                                    </ul>
                                  {%- endif -%}
                                {%- endfor -%}
                              {%- endif -%}
                            {%- endfor -%}
                          {%- endif -%}
                        </div>
                      </div>

                      {%- comment -%}
                        ZONE 4: Collection Image Display (Fallback)
                        Shows collection images based on hovered/selected items with proper fallbacks
                      {%- endcomment -%}
                      <div class="mega-menu-column mega-menu-zone-4">
                        <div class="mega-menu-image-container">
                          <div class="mega-menu-featured-image">
                            {%- comment -%} Default fallback image using settings.logo {%- endcomment -%}
                            {%- if settings.logo != blank -%}
                              {{
                                settings.logo
                                | image_url: width: 200
                                | image_tag:
                                  class: 'mega-menu-default-image',
                                  alt: shop.name,
                                  loading: 'lazy',
                                  width: 200,
                                  height: 200
                              }}
                            {%- else -%}
                              <div class="mega-menu-no-image">
                                <span>{{ shop.name | escape }}</span>
                              </div>
                            {%- endif -%}

                            {%- comment -%} Dynamic images for each collection - will be shown/hidden via JavaScript {%- endcomment -%}
                            {%- if left_menu != blank -%}
                              {%- for link in left_menu.links -%}
                                {%- comment -%} Category level images {%- endcomment -%}
                                {%- if link.object and link.object.image -%}
                                  {{
                                    link.object.image
                                    | image_url: width: 200
                                    | image_tag:
                                      class: 'mega-menu-category-image',
                                      alt: link.title,
                                      loading: 'lazy',
                                      width: 200,
                                      height: 200,
                                      data-category: link.handle
                                  }}
                                {%- endif -%}

                                {%- if link.links != blank -%}
                                  {%- for sublink in link.links -%}
                                    {%- comment -%} Subcategory level images {%- endcomment -%}
                                    {%- if sublink.object and sublink.object.image -%}
                                      {{
                                        sublink.object.image
                                        | image_url: width: 200
                                        | image_tag:
                                          class: 'mega-menu-subcategory-image',
                                          alt: sublink.title,
                                          loading: 'lazy',
                                          width: 200,
                                          height: 200,
                                          data-subcategory: sublink.handle
                                      }}
                                    {%- endif -%}

                                    {%- if sublink.links != blank -%}
                                      {%- for sub_sublink in sublink.links -%}
                                        {%- comment -%} Sub-subcategory level images {%- endcomment -%}
                                        {%- if sub_sublink.object and sub_sublink.object.image -%}
                                          {{
                                            sub_sublink.object.image
                                            | image_url: width: 200
                                            | image_tag:
                                              class: 'mega-menu-sub-subcategory-image',
                                              alt: sub_sublink.title,
                                              loading: 'lazy',
                                              width: 200,
                                              height: 200,
                                              data-sub-subcategory: sub_sublink.handle
                                          }}
                                        {%- endif -%}
                                      {%- endfor -%}
                                    {%- endif -%}
                                  {%- endfor -%}
                                {%- endif -%}
                              {%- endfor -%}
                            {%- endif -%}
                          </div>
                        </div>
                      </div>
                    </nav>
                  </div>
                </div>
              {%- endif -%}
            </div>
          </li>

          <!-- Left Menu Items -->
          {%- assign left_menu = null -%}
          {%- for block in section.blocks -%}
            {%- if block.type == 'left_menu' and block.settings.left_menu != blank -%}
              {%- assign left_menu = block.settings.left_menu -%}
              {%- break -%}
            {%- endif -%}
          {%- endfor -%}

          {%- if left_menu != blank -%}
            {%- for link in left_menu.links -%}
              <li>
                {%- if link.links != blank -%}
                  <div class="header__menu-item-wrapper">
                    <button
                      type="button"
                      class="header__menu-item header__menu-item--dropdown"
                      aria-expanded="false"
                      aria-controls="dropdown-{{ link.handle }}"
                    >
                      {{ link.title | escape }}
                    </button>
                    <ul
                      id="dropdown-{{ link.handle }}"
                      class="header__dropdown-menu"
                      role="menu"
                      aria-hidden="true"
                    >
                      {%- for childlink in link.links -%}
                        <li role="none">
                          <a
                            href="{{ childlink.url }}"
                            class="header__dropdown-item"
                            role="menuitem"
                            {% if childlink.current %}
                              aria-current="page"
                            {% endif %}
                          >
                            {{ childlink.title | escape }}
                          </a>
                        </li>
                      {%- endfor -%}
                    </ul>
                  </div>
                {%- else -%}
                  <a
                    href="{{ link.url }}"
                    class="header__menu-item"
                    {% if link.current %}
                      aria-current="page"
                    {% endif %}
                  >
                    {{ link.title | escape }}
                  </a>
                {%- endif -%}
              </li>
            {%- endfor -%}
          {%- endif -%}
        </ul>
      </nav>

      <!-- Center Logo -->
      <div class="header__center-logo">
        {%- if request.page_type == 'index' -%}
          <h1 class="header__heading">
        {%- endif -%}
        <a href="{{ routes.root_url }}" class="header__heading-link link link--text focus-inset">
          {%- if settings.logo != blank -%}
            <div class="header__heading-logo-wrapper">
              {%- assign logo_alt = settings.logo.alt | default: shop.name | escape -%}
              {%- assign logo_height = settings.logo_width | divided_by: settings.logo.aspect_ratio -%}
              {% capture sizes %}(max-width: {{ settings.logo_width | times: 2 }}px) 50vw, {{ settings.logo_width }}px{% endcapture %}
              {% capture widths %}{{ settings.logo_width }}, {{ settings.logo_width | times: 1.5 | round }}, {{ settings.logo_width | times: 2 }}{% endcapture %}
              {{
                settings.logo
                | image_url: width: 600
                | image_tag:
                  class: 'header__heading-logo motion-reduce',
                  widths: widths,
                  height: logo_height,
                  width: settings.logo_width,
                  alt: logo_alt,
                  sizes: sizes,
