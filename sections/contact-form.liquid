{{ 'section-contact-form.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

{%- liquid
  assign container_class = 'contact-form-container'
  if section.settings.full_width_background
    assign container_class = 'contact-form-container contact-form-container--full-width'
  endif

  assign wrapper_class = 'contact-form-wrapper page-width section-' | append: section.id | append: '-padding'
  if section.settings.remove_padding
    assign wrapper_class = 'contact-form-wrapper page-width'
  endif
-%}

<div class="{{ container_class }}">
  <div class="{{ wrapper_class }}">
    <div
      class="contact-form-content"
      style="padding-left: {{ section.settings.form_padding }}px; padding-right: {{ section.settings.form_padding }}px;"
    >
      <div class="contact-form-header contact-form-header--{{ section.settings.text_alignment }}">
        <h2 class="contact-form-title {{ section.settings.title_size }}">
          {{ 'templates.contact.form.title' | t }}
        </h2>
        {%- if section.settings.custom_subtitle != blank -%}
          <div class="contact-form-description rte">
            {{ section.settings.custom_subtitle }}
          </div>
        {%- else -%}
          <p class="contact-form-description">
            {{ 'templates.contact.form.description' | t }}
            <span class="contact-form-emojis">ðŸ’–âœ¨</span>
          </p>
        {%- endif -%}
      </div>
      {%- liquid
        assign contact_form_class = 'contact-form'
        if settings.animations_reveal_on_scroll
          assign contact_form_class = 'contact-form scroll-trigger animate--slide-in'
        endif
      -%}
      {%- form 'contact', id: 'ContactForm', class: contact_form_class -%}
        {%- if form.posted_successfully? -%}
          <div class="contact-form-status contact-form-status--success">
            {{- 'icon-success.svg' | inline_asset_content -}}
            {{ 'templates.contact.form.post_success' | t }}
          </div>
        {%- elsif form.errors -%}
          <div class="contact-form-status contact-form-status--error">
            {{- 'icon-error.svg' | inline_asset_content -}}
            {{ 'templates.contact.form.error_heading' | t }}
          </div>
          <ul class="contact-form-errors">
            <li>
              <a href="#ContactForm-email" class="link">
                {{ form.errors.translated_fields.email | capitalize }}
                {{ form.errors.messages.email }}
              </a>
            </li>
          </ul>
        {%- endif -%}

        <div class="contact-form-fields">
          <div class="contact-form-row">
            {%- if section.settings.show_name_field -%}
              <div class="contact-form-field">
                <input
                  class="contact-form-input"
                  autocomplete="name"
                  type="text"
                  id="ContactForm-name"
                  name="contact[{{ 'templates.contact.form.name' | t }}]"
                  value="{% if form.name %}{{ form.name }}{% elsif customer %}{{ customer.name }}{% endif %}"
                  placeholder="{{ 'templates.contact.form.name' | t }}*"
                  required
                >
              </div>
            {%- endif -%}
            {%- if section.settings.show_phone_field -%}
              <div class="contact-form-field">
                <input
                  type="tel"
                  id="ContactForm-phone"
                  class="contact-form-input"
                  autocomplete="tel"
                  name="contact[{{ 'templates.contact.form.phone' | t }}]"
                  pattern="[0-9\-]*"
                  value="{% if form.phone %}{{ form.phone }}{% elsif customer %}{{ customer.phone }}{% endif %}"
                  placeholder="{{ 'templates.contact.form.phone' | t }}*"
                  required
                >
              </div>
            {%- endif -%}
            {%- if section.settings.show_email_field -%}
              <div class="contact-form-field">
                <input
                  autocomplete="email"
                  type="email"
                  id="ContactForm-email"
                  class="contact-form-input"
                  name="contact[email]"
                  spellcheck="false"
                  autocapitalize="off"
                  value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}"
                  placeholder="{{ 'templates.contact.form.email' | t }}"
                >
              </div>
            {%- endif -%}
          </div>

          {%- if section.settings.show_comment_field -%}
            <div class="contact-form-row">
              <div class="contact-form-field contact-form-field--full">
                <textarea
                  rows="4"
                  id="ContactForm-body"
                  class="contact-form-textarea"
                  name="contact[{{ 'templates.contact.form.comment' | t }}]"
                  placeholder="{{ 'templates.contact.form.comment' | t }}"
                >{{- form.body -}}</textarea>
              </div>
            </div>
          {%- endif -%}
        </div>

        <div class="contact-form-submit">
          <button type="submit" class="contact-form-button">
            {{ 'templates.contact.form.send' | t }}
          </button>
        </div>
      {%- endform -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "t:sections.contact-form.name",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "header",
      "content": "t:sections.contact-form.settings.content_heading"
    },
    {
      "type": "richtext",
      "id": "custom_subtitle",
      "label": "t:sections.contact-form.settings.custom_subtitle.label",
      "info": "t:sections.contact-form.settings.custom_subtitle.info",
      "default": "<p>Have questions? Leave a request and we will call you back ðŸ’–âœ¨</p>"
    },
    {
      "type": "select",
      "id": "title_size",
      "options": [
        {
          "value": "h2",
          "label": "t:sections.all.heading_size.options__1.label"
        },
        {
          "value": "h1",
          "label": "t:sections.all.heading_size.options__2.label"
        },
        {
          "value": "h0",
          "label": "t:sections.all.heading_size.options__3.label"
        },
        {
          "value": "hxl",
          "label": "t:sections.all.heading_size.options__4.label"
        },
        {
          "value": "hxxl",
          "label": "t:sections.all.heading_size.options__5.label"
        }
      ],
      "default": "h1",
      "label": "t:sections.contact-form.settings.title_size.label"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "options": [
        {
          "value": "left",
          "label": "t:sections.all.text_alignment.options__1.label"
        },
        {
          "value": "center",
          "label": "t:sections.all.text_alignment.options__2.label"
        },
        {
          "value": "right",
          "label": "t:sections.all.text_alignment.options__3.label"
        }
      ],
      "default": "center",
      "label": "t:sections.all.text_alignment.label"
    },
    {
      "type": "header",
      "content": "t:sections.contact-form.settings.form_heading"
    },
    {
      "type": "checkbox",
      "id": "show_name_field",
      "label": "t:sections.contact-form.settings.show_name_field.label",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_phone_field",
      "label": "t:sections.contact-form.settings.show_phone_field.label",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_email_field",
      "label": "t:sections.contact-form.settings.show_email_field.label",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_comment_field",
      "label": "t:sections.contact-form.settings.show_comment_field.label",
      "default": true
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "t:sections.contact-form.settings.layout_heading"
    },
    {
      "type": "checkbox",
      "id": "full_width_background",
      "label": "t:sections.contact-form.settings.full_width_background.label",
      "info": "t:sections.contact-form.settings.full_width_background.info",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "remove_padding",
      "label": "t:sections.contact-form.settings.remove_padding.label",
      "info": "t:sections.contact-form.settings.remove_padding.info",
      "default": false
    },
    {
      "type": "range",
      "id": "form_padding",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "t:sections.contact-form.settings.form_padding.label",
      "info": "t:sections.contact-form.settings.form_padding.info",
      "default": 0
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "t:sections.contact-form.presets.name"
    }
  ]
}
{% endschema %}
